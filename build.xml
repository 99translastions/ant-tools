<project name="ant-tools" default="usage">

	<target name="dist" depends="compile" description="Creates distribution">
		<jar file="ant-trans.jar">
			<fileset dir="build" />
		</jar>
	</target>

	<target name="compile" description="Compiles the code">
		<mkdir dir="build" />
		<javac srcdir="src" destdir="build" classpath="lib/ant.jar" />
	</target>
	
	<target name="clean" description="Removes autogenerated files">
		<delete dir="build" />
		<delete file="ant-trans.jar" />
	</target>

	<target name="usage" description="Prints usage">
		<echo message="Available targets:" />
		<echo message="Use 'ant clean' to cleanup " />
		<echo message="Use 'ant compile' to compile classes " />
		<echo message="Use 'ant dist' to make a jar (ant-trans.jar)" />
	</target>

</project>